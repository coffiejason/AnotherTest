<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingRight="10dp"
    android:id="@+id/row_dc_layout">

    <VideoView
        android:id="@+id/live_video"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/live_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/colorHint"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/egg"/>

    <TextView
        android:layout_marginStart="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="img_000"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/uploadBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/uploadimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_upload"
            />

        <ProgressBar
            android:id="@+id/uploadingpb"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/tipeeGreenDark"/>

        <ImageView
            android:id="@+id/uploadedimg"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_uploaded"/>

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/closebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_close" />
    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/title_text"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CERTIFICATION"/>

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/logo1"
        android:layout_below="@+id/title_text"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/cwsalogo"/>
    <!--
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:id="@+id/logo2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_text"
        android:layout_width="100dp"
        android:padding="15dp"
        android:layout_height="50dp"
        android:src="@drawable/tplogolarge"/>-->

    <RelativeLayout
        android:id="@+id/imagerl"
        android:layout_below="@+id/logo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_profile"
            android:transitionName="image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_male_ph"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/imagerl"
        android:id="@+id/cert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Asare Godred"
        android:textColor="@color/colorTitle"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/cert_name"
        android:id="@+id/cert_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="mkjhshskkjdbhshhhs"
        android:textColor="@color/colorTitle"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/cert_id"
        android:id="@+id/cert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:maxLines="2"

        android:text="Certified Contractor"
        android:textColor="@color/colorTitle"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_below="@+id/cert_text"
        android:id="@+id/qrcode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_qrcode"/>

</RelativeLayout>